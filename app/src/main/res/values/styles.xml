<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInfo">
        <item name="android:textColor">@color/colorTvInfoGrey</item>
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="CitiesDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
